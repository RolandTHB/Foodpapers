{% extends 'base.html.twig' %}

{% block title %}Hello ArticleDetailController!{% endblock %}

{% block body %}
    {{ parent() }}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello ArticleDetailController!✅</h1>

       <p>
           {{ article.title }} publié le {{ article.publicationDate| date('d/m/Y') }}

       </p>
        <br/>
        <img src="{{ article.image }}" alt="">
        <br/>
        <p class="mt-3">
            {{ article.contents  }}
        </p>
        <br/>

        <a href="{{ path('article') }}">Retour page article <i class="fas fa-undo-alt"></i></a>

    </div>
{% endblock %}
